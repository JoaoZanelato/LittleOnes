<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/Dashboard.css' />
</head>
<body>
  <div class="container">
    <header>
      <div class="header-content">
        <h1>Dashboard</h1>
        <p>Anões disponíveis para aluguel</p>
      </div>
      <div class="header-actions">
        <a href="/logout" class="btn-secondary">Desconectar</a>
      </div>
    </header>

    <main class="dwarves-section">
      <h2>Nossos Anões</h2>
      <div class="card-container">
        <% if (typeof anoes !== 'undefined' && anoes.length > 0) { %>
          <% anoes.forEach(function(anao) { %>
            <div class="dwarf-card">
              <img src="<%= anao['url-foto'] %>" alt="Foto de <%= anao.nome %>">
              <p><%= anao.nome %></p>
              <a href="/perfil/<%= anao.id %>" class="btn-primary">Ver Perfil</a>
            </div>
          <% }); %>
        <% } else { %>
          <p>Nenhum anão encontrado.</p>
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 LittleOnes. Todos os direitos reservados.</p>
    </footer>
  </div>
</body>
</html>