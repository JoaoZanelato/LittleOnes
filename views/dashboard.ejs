<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/Dashboard.css' />
</head>
<body>
  <div class="container">
    <header>
      <h1><%= title %></h1>
      <p>Bem-vindo ao seu dashboard de anões!</p>
    </header>

    <main class="dwarves-section">
      <h2>Nossos Anões Disponíveis</h2>
      <div class="card-container">
        <% if (anoes && anoes.length > 0) { %>
          <% anoes.forEach(function(anao) { %>
            <div class="dwarf-card">
              <img src="<%= anao['url-foto'] %>" alt="Foto de <%= anao.nome %>">
              <p><%= anao.nome %></p>
              <button class="btn-primary">Ver Detalhes</button>
            </div>
          <% }); %>
        <% } else { %>
          <p>Nenhum anão encontrado.</p>
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 LittleOnes. Todos os direitos reservados.</p>
    </footer>
  </div>
</body>
</html>