<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Anão para Aluguel</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=MedievalSharp&family=Roboto:wght@400;700&display=swap');

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            background-color: #f3e9d2; /* Um tom de pergaminho */
            color: #3d2b1f; /* Marrom escuro */
        }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            padding: 20px;
        }
        
        main {
            display: flex;
            background-color: #c6b8a3; /* Fundo de pedra clara */
            padding: 40px;
            border: 2px solid #5a3d2b;
            border-radius: 8px;
            gap: 40px;
        }

        .profile-image {
            flex: 1;
            text-align: center;
        }

        .profile-image img {
            max-width: 100%;
            height: auto;
            border-radius: 50%;
            border: 5px solid #8b4513; /* Borda de madeira (saddlebrown) */
            box-shadow: 0 4px 15px rgba(0,0,0,0.4);
        }

        .profile-details {
            flex: 1.5;
        }
        
        .profile-details h1 {
            font-family: 'MedievalSharp', cursive;
            font-size: 3em;
            color: #5a3d2b; /* Marrom mais escuro */
            margin: 0 0 15px 0;
            line-height: 1.2;
            text-shadow: 1px 1px #d3c5b4;
        }

        .profile-details p {
            font-size: 1.1em;
            line-height: 1.6;
        }

        .rating-container {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
        }

        .star-display {
            font-size: 1.8em;
            color: #ffd700; /* Dourado */
        }

        .star-display .empty {
            color: #a9a9a9; /* Cinza escuro */
        }

        .rating-info {
            font-size: 1.1em;
            font-weight: bold;
        }
        
        .action-buttons {
            margin-top: 30px;
            display: flex;
            gap: 15px;
        }
        
        .action-buttons button {
            font-family: 'MedievalSharp', cursive;
            font-size: 1.2em;
            padding: 12px 25px;
            border: 2px solid #5a3d2b;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .btn-primary {
            background-color: #800000; /* Vermelho escuro/vinho */
            color: #fff;
        }
        .btn-primary:hover {
            background-color: #a00000;
        }
        
        .btn-secondary {
            background-color: transparent;
            color: #5a3d2b;
            font-weight: bold;
        }
        .btn-secondary:hover {
            background-color: rgba(90, 61, 43, 0.1);
        }

        .specialties-section {
            background-color: #800000; /* Vermelho escuro/vinho */
            color: #f3e9d2; /* Cor de pergaminho */
            margin-top: 20px;
            border-radius: 8px;
            padding: 30px;
            border: 2px solid #5a3d2b;
        }

        .specialties-section h2 {
            font-family: 'MedievalSharp', cursive;
            text-align: center;
            font-size: 2.2em;
            margin-top: 0;
            margin-bottom: 30px;
            text-transform: uppercase;
            text-shadow: 2px 2px #000;
        }

        .specialties-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px 40px;
        }
        
        .specialty-item p {
            margin: 0;
            line-height: 1.5;
            font-size: 1.1em;
        }
    </style>
</head>
<body>

    <div class="container">
        <main>
            <div class="profile-image">
                <img id="profile-img" src="" alt="Foto de Perfil do Anão">
            </div>

            <div class="profile-details">
                <h1 id="profile-name"></h1>
                
                <div class="rating-container">
                    <div id="star-display" class="star-display"></div>
                    <div id="rating-info" class="rating-info"></div>
                </div>

                <p id="profile-description"></p>

                <div class="action-buttons">
                    <button class="btn-primary">CONTRATAR PARA EVENTO</button>
                    <button class="btn-secondary">VER DISPONIBILIDADE</button>
                </div>
            </div>
        </main>
        
        <section class="specialties-section">
            <h2>Especialidades</h2>
            <div class="specialties-grid">
                <div class="specialty-item"><p>✔️ Mestre em Churrasco de Javali</p></div>
                <div class="specialty-item"><p>✔️ Segurança de Barril de Chopp</p></div>
                <div class="specialty-item"><p>✔️ Contador de Piadas Ruins (Garantidas!)</p></div>
                <div class="specialty-item"><p>✔️ Especialista em Canto de Batalha (Karaokê)</p></div>
                <div class="specialty-item"><p>✔️ Animador de Festas Profissional</p></div>
                <div class="specialty-item"><p>✔️ Consultor de Decoração Rústica</p></div>
            </div>
        </section>

    </div>

    <script>
        // --- DADOS DO PERFIL (Tudo em variáveis para fácil demonstração) ---
        const perfilAnão = {
            nome: "Gimli, o Barba de Ferro",
            imagemUrl: "https://i.imgur.com/Qtr53dG.jpeg", // URL da imagem de um anão amigável
            descricao: "Não se deixe enganar pela minha altura, pois minha alegria é gigante! Sou um anão festeiro com uma barba mais trançada que conversa de elfo. Mestre cervejeiro amador e profissional em animar qualquer tipo de confraternização, de casamentos a torneios de machado. Contrate-me e garanto que sua festa será lendária!",
            avaliacoes: [5, 5, 4, 5, 4, 5, 5] // Array de notas recebidas
        };


        // --- LÓGICA PARA POPULAR A PÁGINA ---

        // Função para gerar as estrelas
        function gerarEstrelas(media = 0) {
            let estrelasHtml = '';
            const mediaArredondada = Math.round(media);
            for (let i = 1; i <= 5; i++) {
                estrelasHtml += (i <= mediaArredondada) ? '★' : '<span class="empty">★</span>';
            }
            return estrelasHtml;
        }

        // Função principal que roda quando a página carrega
        document.addEventListener('DOMContentLoaded', () => {
            // Pega as referências dos elementos do HTML
            const imgEl = document.getElementById('profile-img');
            const nameEl = document.getElementById('profile-name');
            const descEl = document.getElementById('profile-description');
            const starEl = document.getElementById('star-display');
            const infoEl = document.getElementById('rating-info');

            // Calcula a média das avaliações
            const totalDeAvaliacoes = perfilAnão.avaliacoes.length;
            const somaDasNotas = perfilAnão.avaliacoes.reduce((soma, nota) => soma + nota, 0);
            const media = totalDeAvaliacoes > 0 ? somaDasNotas / totalDeAvaliacoes : 0;

            // Popula os elementos com os dados do objeto 'perfilAnão'
            imgEl.src = perfilAnão.imagemUrl;
            nameEl.textContent = perfilAnão.nome;
            descEl.textContent = perfilAnão.descricao;
            
            // Popula as informações de avaliação
            starEl.innerHTML = gerarEstrelas(media);
            infoEl.textContent = `${media.toFixed(1)} (${totalDeAvaliacoes} contratos)`;
        });
    </script>

</body>
</html>